<% if flash[:errors] %>
    <ul>
        <% flash[:errors].each do |error| %>
            <li><%= error %></li>
        <% end %>
    </ul>
<% end %>

<%= form_with model: @post do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <br><br>
    <%= f.label :blogger %>
    <%= f.collection_select :blogger_id, Blogger.all, :id, :name, { include_blank: 'Select an author' } %>
    <br><br>
    <%= f.label :destination %>
    <%= f.collection_select :destination_id, Destination.all, :id, :name, { include_blank: 'Select a destination' } %>
    <br><br>
    <%= f.label :content %>
    <%= f.text_area :content %>
    <br><br>
    <%= f.submit %>
<% end %>
